                                                    <Border x:Name="item" 
                                                            Background="Blue"
                                                            BorderThickness="0,0,0,0.5" 
                                                            BorderBrush="{StaticResource PhoneForegroundBrush}"
                                                            Tap="item_Tap">
                                                        <TextBlock TextWrapping="Wrap"
                                                                   Style="{StaticResource PhoneTextSmallStyle}">
                                                            <Run Text="{Binding CommentAuthorName}"
                                                                 FontWeight="Bold"
                                                                 FontSize="{StaticResource PhoneFontSizeNormal}"
                                                                 FontFamily="{StaticResource PhoneFontFamilySemiBold}"/>
                                                            <Run Text="{Binding ReplyBody}"
                                                                 FontSize="{StaticResource PhoneFontSizeNormal}"
                                                                 FontFamily="{StaticResource PhoneFontFamilySemiLight}"/>
                                                            <Underline Foreground="DodgerBlue">
                                                                <Run Text="{Binding ReplyTime}"
                                                                     FontSize="{StaticResource PhoneFontSizeSmall}"
                                                                     FontFamily="{StaticResource PhoneFontFamilyLight}"/>
                                                            </Underline>
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </phone:LongListSelector.ItemTemplate>
                        <phone:LongListSelector.ListFooterTemplate>
                            <DataTemplate>
                                <Border x:Name="nextPage" 
                                        Margin="5,5,5,72"
                                        Padding="5" 
                                        Background="Blue"
                                        Tap="nextPage_Tap">
                                    <TextBlock HorizontalAlignment="Center" Text="下一页"/>
                                </Border>
                            </DataTemplate>
                        </phone:LongListSelector.ListFooterTemplate>
                    </phone:LongListSelector>
                </phone:PivotItem>
            </phone:Pivot>
        </Grid>
    </Grid>
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsMenuEnabled="True" IsVisible="True" Opacity="0.5">
            <shell:ApplicationBarIconButton x:Name="appBarRefresh" Text="刷新" 
                                            IconUri="/Assets/Img/Dark/refresh.png"
                                            Click="appBarRefresh_Click"/>
            <shell:ApplicationBarIconButton x:Name="appBarPublishIng" Text="发闪"
                                            IconUri="/Assets/Img/Dark/edit.png"
                                            Click="appBarPublishIng_Click"/>
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem x:Name="appMenuLock" Text="锁定当前页" IsEnabled="True"
                                              Click="appMenuLock_Click"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>
</phone:PhoneApplicationPage>
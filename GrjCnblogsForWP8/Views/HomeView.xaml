                                            Tap="llsHeader_Tap">
                                        <TextBlock Text="{Binding Title}"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                    <Border Background="Blue" Margin="5" Padding="5"
                                            BorderThickness="0" Grid.Row="3"
                                            DataContext="{Binding TopNews}"
                                            BorderBrush="{StaticResource PhoneForegroundBrush}"
                                            Tap="llsHeader_Tap">
                                        <TextBlock Text="{Binding Title}"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                    <Border Background="Blue" Margin="5" Padding="5"
                                            BorderThickness="0" Grid.Row="4"
                                            DataContext="{Binding RecommendNews}"
                                            BorderBrush="{StaticResource PhoneForegroundBrush}"
                                            Tap="llsHeader_Tap">
                                        <TextBlock Text="{Binding Title}"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </phone:LongListSelector.ListHeaderTemplate>
                        <phone:LongListSelector.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="content" 
                                        Margin="5" 
                                        Padding="5"
                                        Background="Blue"
                                        BorderThickness="0" 
                                        BorderBrush="{StaticResource PhoneForegroundBrush}"
                                        Tap="content_Tap">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.ColumnSpan="2"
                                                   Text="{Binding Title}"
                                                   TextWrapping="Wrap"
                                                   FontWeight="Bold"/>
                                        <Grid Grid.Row="1"
                                              Margin="0,10,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Image Source="{Binding FaceImage}"
                                                   Width="52"
                                                   Height="52"/>
                                            <TextBlock Grid.Row="1" Text="{Binding Digg}"
                                                       HorizontalAlignment="Center"
                                                       Style="{StaticResource PhoneTextSmallStyle}"/>
                                            <TextBlock Grid.Row="2"
                                                       Text="推荐"
                                                       HorizontalAlignment="Center"
                                                       Style="{StaticResource PhoneTextSmallStyle}"/>
                                        </Grid>
                                        <TextBlock Text="{Binding Summary}"
                                                   Style="{StaticResource PhoneTextSmallStyle}"
                                                   Margin="5,5,5,0"
                                                   Grid.Row="1"
                                                   Grid.Column="1" 
                                                   VerticalAlignment="Stretch"
                                                   TextWrapping="Wrap"/>
                                        <toolkit:WrapPanel Grid.Row="2" Grid.ColumnSpan="2"
                                                           Margin="5,0,0,0">
                                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                                                   Margin="5,0,0,0"
                                                   Text="{Binding BlogerName}"
                                                   Style="{StaticResource PhoneTextSmallStyle}"/>
                                            <TextBlock Style="{StaticResource PhoneTextSmallStyle}"
                                                       Text="{Binding PostItemFooter}"/>

                                        </toolkit:WrapPanel>
                                    </Grid>
                                    <toolkit:ContextMenuService.ContextMenu>
                                        <toolkit:ContextMenu Margin="5" Padding="5">
                                            <toolkit:MenuItem x:Name="miBlog" Header="访问个人博客" Click="miBlog_Click" />
                                            <toolkit:MenuItem x:Name="miComment" Header="查看评论" Click="miComment_Click"/>
                                        </toolkit:ContextMenu>
                                    </toolkit:ContextMenuService.ContextMenu>
                                </Border>
                            </DataTemplate>
                        </phone:LongListSelector.ItemTemplate>
                        <phone:LongListSelector.ListFooterTemplate>
                            <DataTemplate>
                                <Border x:Name="NextPage"
                                        Background="Blue"
                                        Margin="5,5,5,30"
                                        Padding="5"
                                        BorderThickness="0"
                                        BorderBrush="{StaticResource PhoneForegroundBrush}"
                                        Tap="NextPage_Tap">
                                    <TextBlock HorizontalAlignment="Center" Text="下一页"/>
                                </Border>
                            </DataTemplate>
                        </phone:LongListSelector.ListFooterTemplate>
                    </phone:LongListSelector>
                </phone:PivotItem>
            </phone:Pivot>
        </Grid>
    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True" Opacity="0.5">
            <shell:ApplicationBarIconButton x:Name="appBarRefresh" 
                                            Text="刷新"
                                            IconUri="/Assets/Img/Dark/refresh.png"
                                            Click="appBarRefresh_Click"/>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>
</phone:PhoneApplicationPage>